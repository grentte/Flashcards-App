<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="cardPane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.flashcardsapp.controllers.modalWindows.CardViewController">
    <children>
        <StackPane fx:id="frontSide" alignment="CENTER" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #fafafa;">
            <children>
                <Label fx:id="frontLabel" styleClass="card-label" text="Front Side">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </StackPane>
        <StackPane fx:id="backSide" alignment="CENTER" prefHeight="200.0" prefWidth="300.0" visible="false">
            <children>
                <Label fx:id="backLabel" styleClass="card-label" text="Back Side">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </StackPane>
        <Button fx:id="prevButton" prefHeight="37.0" prefWidth="60.0" style="-fx-background-color: #fafafa;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
         <graphic>
            <ImageView fitHeight="29.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../../../../OneDrive/Изображения/кнопки/стрелка.png" />
               </image>
            </ImageView>
         </graphic></Button>
        <Button fx:id="nextButton" prefHeight="35.0" prefWidth="61.0" style="-fx-background-color: #fafafa;" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <graphic>
            <ImageView fitHeight="29.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" rotate="180.0">
               <image>
                  <Image url="@../../../../../../../../../OneDrive/Изображения/кнопки/стрелка.png" />
               </image>
            </ImageView>
         </graphic></Button>
    </children>
</AnchorPane>
